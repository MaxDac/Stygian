<.link
  :if={@current_character}
  navigate={~p"/transactions"}
  class="fixed bottom-[50px] left-[50px] w-[100px] h-[100px] text-white hidden xl:block"
>
  <img
    src="/images/CigarettesIcon.webp"
    alt="Cigarettes quantity"
    class="max-w-[100px] h-auto absolute"
  />
  <p class="font-typewriter text-xl text-brand shadow-black absolute bottom-0 left-0">
    <%= @current_character.cigs %>
  </p>
</.link>
